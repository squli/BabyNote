<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.squel.babynote">

    <application
        android:name=".utils.BabyNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".eating.Eating"
            android:label="@string/title_activity_eating"
            android:parentActivityName="ru.squel.babynote.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.squel.babynote.MainActivity" />
        </activity>

        <activity
            android:name=".shortAction.ShortActionActivity"
            android:parentActivityName="ru.squel.babynote.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.squel.babynote.MainActivity" />
        </activity>

        <provider
            android:name=".database.BabyDataContentProvider"
            android:authorities="ru.squel.babynote.provider" />

    </application>

</manifest>
